<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/mqtt_settings">

        <EditTextPreference
            app:defaultValue="localhost"
            app:key="@string/mqtt_host_key"
            app:title="@string/mqtt_host"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue="1883"
            app:key="@string/mqtt_port_key"
            app:title="@string/mqtt_port"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:defaultValue=""
            app:key="@string/mqtt_client_id_key"
            app:title="@string/mqtt_client_id"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Database">

        <EditTextPreference
            android:defaultValue="192.168.177.1"
            android:key="@string/db_host"
            app:useSimpleSummaryProvider="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Host" />
        <EditTextPreference
            android:defaultValue="5432"
            android:key="@string/db_port"
            app:useSimpleSummaryProvider="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Port" />
        <EditTextPreference
            android:defaultValue="osh"
            android:key="@string/db_name"
            app:useSimpleSummaryProvider="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:title="Name" />
        <EditTextPreference
            android:defaultValue="osh"
            android:key="@string/db_username"
            app:useSimpleSummaryProvider="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username" />
        <EditTextPreference
            android:defaultValue="osh"
            android:key="@string/db_password"
            app:useSimpleSummaryProvider="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>

</PreferenceScreen>